{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "meteor-controller",
    "labels": {
      "name": "meteor"
    }
  },
  "spec": {
    "replicas": 2,
    "template": {
      "metadata": {
        "labels": {
          "name": "meteor"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "meteor",
            "image": "xcv58/maybe:latest",
            "ports": [
              {
                "name": "http-server",
                "containerPort": 8080
              }
            ]
          }
        ]
      }
    }
  }
}
